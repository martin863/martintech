---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="branding">
			<h2><a href="/" class="logo">{SITE_TITLE}</a></h2>
			<span class="tagline">Digital Solutions Expert</span>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/services">Services</HeaderLink>
			<HeaderLink href="/portfolio">Portfolio</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://linkedin.com/in/martin-mwangi-m" target="_blank">
				<span class="sr-only">Connect on LinkedIn</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="28" height="28">
					<path fill="currentColor" d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/>
				</svg>
			</a>
			<a href="https://github.com/yourusername" target="_blank">
				<span class="sr-only">View GitHub Profile</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="28" height="28">
					<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
				</svg>
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		padding: 1rem 2rem;
		background: #ffffff;
		box-shadow: 0 2px 10px rgba(44, 62, 80, 0.1);
		position: sticky;
		top: 0;
		z-index: 1000;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
	}

	.branding {
		display: flex;
		flex-direction: column;
	}

	.logo {
		color: #2c3e50;
		font-weight: 700;
		font-size: 1.4rem;
		text-decoration: none;
	}

	.tagline {
		color: #7f8c8d;
		font-size: 0.9rem;
		margin-top: 0.2rem;
	}

	.internal-links {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}

	nav a {
		padding: 0.5rem 0;
		color: #2c3e50;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s ease;
		border-bottom: 2px solid transparent;
	}

	nav a:hover,
	nav a.active {
		color: #3498db;
		border-bottom-color: #3498db;
	}

	.social-links {
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	.social-links svg {
		transition: transform 0.3s ease;
	}

	.social-links a:hover svg {
		transform: translateY(-2px);
		color: #3498db;
	}

	@media (max-width: 768px) {
		header {
			padding: 1rem;
		}
		
		.internal-links {
			display: none;
		}

		.social-links {
			gap: 0.8rem;
		}

		.social-links svg {
			width: 24px;
			height: 24px;
		}
	}
</style>
