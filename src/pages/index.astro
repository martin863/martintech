---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const timeline = [
  { year: "2014", title: "Tech Journey Begins", desc: "Started ICT Diploma at North Eastern National Polytechnic" },
  { year: "2016", title: "First Leadership Role", desc: "Became HOD at Ganana Institute of Medical Sciences" },
  { year: "2018", title: "Digital Transformation", desc: "Joined Dallago Tours as IT Administrator & Marketer" },
  { year: "2022", title: "AI Specialization", desc: "Earned ALX AiCE Certification" }
];

const passions = [
  { icon: 'üåç', title: "Travel Tech", desc: "Building solutions for tourism industry" },
  { icon: 'ü§ñ', title: "AI Ethics", desc: "Responsible AI implementation" },
  { icon: 'üìö', title: "Continuous Learning", desc: "Daily tech news consumer" }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <BaseHead 
        title="About Martin | Tech Professional" 
        description="Discover the journey and philosophy of Martin Mwangi, Nairobi-based digital solutions expert" 
    />
    <link rel="stylesheet" href="https://unpkg.com/pattern.css" />
</head>
<body class="pattern-zigzag-xl">
    <Header />
    
    <main class="about-page">
        <section class="identity-section">
            <div class="profile-photo">
                <!-- Add your profile image -->
                <div class="image-placeholder"></div>
            </div>
            
            <div class="identity-content">
                <h1 class="mega-title">
                    <span class="highlight">Building Digital</span><br>
                    <span class="highlight">Futures</span><br>
                    <span class="subtitle">Since 2014</span>
                </h1>
                
                <div class="signature-block">
                    <p class="location">üìç Nairobi, Kenya</p>
                    <div class="signature">
                        <span>Martin Mwangi</span>
                        <div class="line"></div>
                    </div>
                </div>
            </div>
        </section>

        <section class="philosophy-section">
            <h2 class="section-heading">My Tech Philosophy</h2>
            <div class="philosophy-grid">
                <div class="philosophy-card">
                    <h3>01. Purpose First</h3>
                    <p>Technology should solve real problems, not just create shiny objects</p>
                </div>
                <div class="philosophy-card">
                    <h3>02. Ethical Code</h3>
                    <p>Security and privacy as fundamental rights in all solutions</p>
                </div>
                <div class="philosophy-card">
                    <h3>03. Growth Mindset</h3>
                    <p>Every project is an opportunity to learn and improve</p>
                </div>
            </div>
        </section>

        <section class="journey-section">
            <h2 class="section-heading">Professional Journey</h2>
            <div class="timeline">
                {timeline.map(item => (
                    <div class="timeline-item">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h3>{item.year} ‚Äî {item.title}</h3>
                            <p>{item.desc}</p>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <section class="passions-section">
            <h2 class="section-heading">Beyond Code</h2>
            <div class="passions-grid">
                {passions.map(passion => (
                    <div class="passion-card">
                        <span class="passion-icon">{passion.icon}</span>
                        <h3>{passion.title}</h3>
                        <p>{passion.desc}</p>
                    </div>
                ))}
            </div>
        </section>
    </main>

    <Footer />

    <style>
        .about-page {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .identity-section {
            display: grid;
            grid-template-columns: 1fr 1.5fr;
            gap: 4rem;
            margin-bottom: 6rem;
        }

        .profile-photo .image-placeholder {
            width: 100%;
            height: 500px;
            background: #e0e0e0;
            border-radius: 30px;
            position: relative;
            overflow: hidden;
        }

        .mega-title {
            font-size: 4.5rem;
            line-height: 1;
            margin: 2rem 0;
        }

        .highlight {
            background: linear-gradient(45deg, #2c3e50, #3498db);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .subtitle {
            font-size: 1.5rem;
            color: #7f8c8d;
            margin-top: 1rem;
            display: block;
        }

        .signature-block {
            margin-top: 3rem;
        }

        .signature {
            font-family: 'Dancing Script', cursive;
            font-size: 2.5rem;
            position: relative;
            display: inline-block;
        }

        .signature .line {
            width: 100%;
            height: 2px;
            background: #3498db;
            margin-top: -10px;
        }

        .philosophy-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .philosophy-card {
            padding: 2rem;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        }

        .timeline {
            position: relative;
            padding: 2rem 0;
            margin: 4rem 0;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 50%;
            width: 2px;
            height: 100%;
            background: #3498db;
        }

        .timeline-item {
            display: flex;
            margin: 4rem 0;
            width: 50%;
            position: relative;
        }

        .timeline-item:nth-child(odd) {
            margin-left: auto;
            flex-direction: row-reverse;
            text-align: right;
        }

        .timeline-marker {
            width: 20px;
            height: 20px;
            background: #3498db;
            border-radius: 50%;
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
        }

        .passions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .passion-card {
            text-align: center;
            padding: 2rem;
            border: 2px solid #3498db;
            border-radius: 15px;
            transition: transform 0.3s ease;
        }

        .passion-card:hover {
            transform: translateY(-5px);
        }

        .passion-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            display: block;
        }

        @media (max-width: 768px) {
            .identity-section {
                grid-template-columns: 1fr;
            }
            
            .mega-title {
                font-size: 3rem;
            }
            
            .timeline::before {
                left: 20px;
            }
            
            .timeline-item {
                width: 100%;
                padding-left: 40px;
            }
        }
    </style>
</body>
</html>
