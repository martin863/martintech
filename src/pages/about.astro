---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const services = [
  { icon: 'üíª', title: 'Web Development', desc: 'Building responsive websites with modern tech stack' },
  { icon: 'üîç', title: 'SEO Optimization', desc: 'Boosting search rankings & organic traffic' },
  { icon: 'üìà', title: 'Digital Marketing', desc: 'Effective Google/FB ad campaigns' },
  { icon: 'ü§ñ', title: 'AI Training', desc: 'LLM prompting & AI model training' }
